<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_gray_color"
    android:layout_height="match_parent">
    <com.ebaonet.lawyer.ui.weight.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        app:displayname="更换绑定手机号码"
        app:display_style="left_center"
        android:layout_height="wrap_content">

    </com.ebaonet.lawyer.ui.weight.TitleView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/select_validate_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择验证方式"
            style="@style/black16"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/black14"
            android:layout_marginLeft="10dp"
            android:text=">"
            />
        <TextView
            android:id="@+id/security_validate"
            android:layout_width="wrap_content"
            android:text="安全验证"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            style="@style/black16"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/black14"
            android:text=">"
            />
        <TextView
            android:id="@+id/bind_phone"
            android:layout_width="wrap_content"
            android:text="换绑手机"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            style="@style/black16"

            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <include layout="@layout/item_divider_line"></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="xxx"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/blue_frame_tanslate_littele_radius"
                android:text="发送验证码"
                android:textColor="@color/basic_info_top_blue"
                android:textSize="12sp"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
        <include layout="@layout/item_divider_line"></include>
        <EditText
            android:layout_width="match_parent"
            android:background="@color/white"
            android:hint="输入短信验证码"
            android:textColorHint="@color/gray"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_height="44dp" />
        <include layout="@layout/item_divider_line"></include>

    </LinearLayout>

</LinearLayout>