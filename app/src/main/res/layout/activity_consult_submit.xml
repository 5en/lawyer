<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_gray_color"
    android:orientation="vertical">

    <com.ebaonet.lawyer.ui.weight.TitleView
        android:id="@+id/mTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:display_style="left_center"
        app:displayname="文字咨询" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white">

                <TextView
                    style="@style/black14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="法律从业者" />

                <TextView
                    style="@style/hui14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="王大锤" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white">

                <TextView
                    style="@style/black14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="咨询方向" />

                <View style="@style/line_h" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/jiantou"
                    android:text="婚姻"
                    android:textColor="@color/TextColor2"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View style="@style/line_h" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/page_gray_color" />

            <View style="@style/line_h" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@color/white">

                <EditText
                    style="@style/black14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/girdView"
                    android:gravity="top|left"
                    android:background="@color/white"
                    android:hint="为便于您更快获得解答，请选择所咨询问题相关模块"
                    android:maxLength="200"
                    android:padding="15dp"
                    android:textColorHint="#9b9b9b" />

                <GridView
                    android:id="@+id/girdView"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentBottom="true"
                    android:numColumns="3" />
            </RelativeLayout>

            <View style="@style/line_h" />

            <TextView
                style="@style/hui12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="还可以输入200字" />

            <TextView
                android:id="@+id/submit"
                style="@style/white16"
                android:text="提交问题"
                android:background="@drawable/shape_blue_submit"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>