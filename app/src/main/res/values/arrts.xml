<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- TitleBar -->
    <declare-styleable name="TitleBar">
        <attr name="display_style">
            <enum name="left_center" value="0" />
            <enum name="all_right_img" value="1" />
            <enum name="all_right_text" value="2" />
            <enum name="right_center_img" value="3" />
            <enum name="right_center_text" value="4" />
            <enum name="center" value="5" />
            <enum name="homepage" value="6" />
            <enum name="left" value="7" />
        </attr>
        <attr name="displayname" format="string" />
        <attr name="right_display_name" format="string"></attr>
        <attr name="right_display_image" format="reference"></attr>
        <attr name="has_left_drawable">
            <enum name="has_drawable" value="0"></enum>
            <enum name="no_drawable" value="1"></enum>
        </attr>

    </declare-styleable>
    <!--edit with left text image  -->
    <declare-styleable name="EditWithLeftImageAndTextView">
        <attr name="leftText2" format="string"></attr>
        <attr name="leftImage" format="reference"></attr>
        <attr name="edit_hint" format="string"></attr>
        <attr name="showLeftImage" format="enum">
            <enum name="GONE" value="8"></enum>
            <enum name="VISIBLE" value="0"></enum>
        </attr>
    </declare-styleable>
    <declare-styleable name="NumberProgressBar">
        <attr name="progress" format="integer" />
        <attr name="max" format="integer" />
        <attr name="progress_unreached_color" format="color" />
        <attr name="progress_reached_color" format="color" />
        <attr name="progress_reached_bar_height" format="dimension" />
        <attr name="progress_unreached_bar_height" format="dimension" />
        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_offset" format="dimension" />
        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="Themes">
        <attr name="numberProgressBarStyle" format="reference" />
    </declare-styleable>
    <!--text with left and right image-->
    <declare-styleable name="TextWithLeftAndRightImageView">
        <attr name="content" format="string"></attr>
        <attr name="left_image1" format="reference"></attr>
        <attr name="right_image1" format="reference"></attr>
        <attr name="show_left_image" format="enum">
            <enum name="GONE" value="8"></enum>
            <enum name="VISIBLE" value="0"></enum>
        </attr>
    </declare-styleable>

    <declare-styleable name="UCIndexView">
        <attr name="pageHeadViewHeight" format="dimension"></attr><!-- UC页面头部的高度 -->
        <attr name="isPageHeadViewFixed" format="boolean"></attr><!-- UC页面头部是否固定，此属性为true的话PageHeadView则会固定在界面顶部不会滑动,此属性为false的话PageHeadView会首先隐藏再慢慢滑出 -->
        <attr name="pageHeadViewLayoutId" format="reference"></attr><!-- UC页面头部内容的布局资源ID -->
        <attr name="pageNavigationViewHeight" format="dimension"></attr><!-- UC网站导航部分的高度 -->
        <attr name="pageNavigationViewLayoutId" format="reference"></attr><!-- UC网站导航部分的内容布局资源ID -->
        <attr name="isContentHeadViewEnable" format="boolean"></attr><!-- UC新闻内容头部的是否启用 -->
        <attr name="contentHeadViewHeight" format="dimension"></attr><!-- UC新闻内容头部的高度 -->
        <attr name="contentHeadViewLayoutId" format="reference"></attr><!-- UC新闻内容头部的内容布局资源ID -->
        <attr name="contentViewLayoutId" format="reference"></attr><!-- UC新闻内容布局资源ID -->
        <attr name="autoSlipDistanceStep" format="dimension"></attr><!-- 手指放开后，视图自动滑动时的每次滑动距离间隔，默认每次滑动20px -->
        <attr name="autoSlipTimeStep" format="integer"></attr><!-- 手指放开后，视图自动滑动时的时间间隔，默认每间隔5毫秒滑动一次 -->
        <attr name="isPullRestoreEnable" format="boolean"></attr><!-- 是否允许下拉时恢复初始化状态 -->
    </declare-styleable>
</resources>